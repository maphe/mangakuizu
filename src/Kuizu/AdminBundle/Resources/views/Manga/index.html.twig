{% extends "KuizuFrontBundle::layout.html.twig" %}

{% block content -%}
    <h1>Manga list</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('kuizu_admin_manga_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td><img src="{{ asset(entity.imageWebPath) }}" /></td>
                <td>
                    <a href="{{ path('kuizu_admin_manga_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="{{ path('kuizu_admin_manga_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('kuizu_admin_manga_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
