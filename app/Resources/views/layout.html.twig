{% extends '::base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mk-main-navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">MgKz</a>
        </div>
        <div class="collapse nav-collapse" id="mk-main-navbar">
            <ul class="nav navbar-nav">
                <li><a href="{# path('kuizu_play') #}">{{ 'layout.play'|trans }}</a></li>
            </ul>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <p class="navbar-text pull-right">
                    <span class="badge">{{ app.user.username }}</span>
                    <span class="label label-info">{{ app.user.score }} points</span>
                    <a href="{{ path('fos_user_security_logout') }}">
                        <span class="label label-important">X</span>
                    </a>
                </p>
            {% else %}
                <p class="navbar-text pull-right">
                    <a href="{{ path('fos_user_security_login') }}">
                        <span class="label label-info">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</span>
                    </a>
                    <a href="{{ path('fos_user_registration_register') }}">
                        <span class="label label-success">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</span>
                    </a>
                </p>
            {% endif %}
        </div>
    </nav>

    {#     <header>#}
    {#         <img src="{{ asset('bundles/kuizuweb/img/banniere.png') }}" />#}
    {#     </header>#}

    <div id="content" class="well">

        {#{% if is_granted("ROLE_CONTRIB") %}
            <nav class="navbar navbar-static-top">
                <div class="navbar-inner">
                    <div class="container">
                        <div class="nav-collapse collapse">
                            <p class="navbar-text pull-left"><span class="label label-inverse">{{ 'layout.admin'|trans }}</span></p>
                            <ul class="nav">
                                <li><a href="{{ path('kuizu_contrib_manga') }}">{{ 'layout.contrib.manga'|trans }}</a></li>
                                <li><a href="{{ path('question') }}">{{ 'layout.contrib.question'|trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        {% endif %}#}

        {% for key, messages in app.session.flashbag.all() %}
            {% if key in ['success', 'error', 'warning', 'info'] %}
                {% for message in messages %}
                    <div class="alert alert-{{ key }}">
                        <button data-dismiss="alert" class="close" type="button">Ã—</button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% else %}
                {% for message in messages %}
                    <div class="{{ key }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endfor %}

        {% block content %}{% endblock %}

    </div>

    <div class="clear"></div>

    <footer class="well">
        footer
    </footer>
{% endblock %}

{% block stylesheets %}
    {% stylesheets '@KuizuFrontBundle/Resources/public/css/*' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {%  javascripts '@KuizuFrontBundle/Resources/public/js/*' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}